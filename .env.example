# =============================================================================
# AutoScoring Configuration File
# Lab FKI Universitas Muhammadiyah Surakarta
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Settings
# -----------------------------------------------------------------------------
# Secret key for session management (WAJIB DIGANTI di production!)
SECRET_KEY=ganti-dengan-secret-key-yang-aman-dan-panjang

# Flask environment (development/production)
FLASK_ENV=development

# Debug mode (true/false)
FLASK_DEBUG=false

# Server host and port
FLASK_HOST=0.0.0.0
FLASK_PORT=5005

# -----------------------------------------------------------------------------
# Default Admin Account (created on first run)
# -----------------------------------------------------------------------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD=informatika

# -----------------------------------------------------------------------------
# Database Settings
# -----------------------------------------------------------------------------
# Database URL (default: SQLite)
DATABASE_URL=sqlite:///autoscoring.db

# -----------------------------------------------------------------------------
# File Upload Settings
# -----------------------------------------------------------------------------
# Maximum file size per upload (in MB)
MAX_FILE_SIZE_MB=50

# Maximum number of PDF files per job
MAX_PDF_COUNT=50

# -----------------------------------------------------------------------------
# Scoring Settings
# -----------------------------------------------------------------------------
# Default minimum score
DEFAULT_SCORE_MIN=40

# Default maximum score
DEFAULT_SCORE_MAX=100

# Maximum words for evaluation text
EVALUATION_MAX_WORDS=100

# -----------------------------------------------------------------------------
# OCR Settings
# -----------------------------------------------------------------------------
# Enable OCR for scanned PDFs (true/false)
ENABLE_OCR=true

# -----------------------------------------------------------------------------
# Worker Settings
# -----------------------------------------------------------------------------
# Maximum number of concurrent workers for scoring
MAX_WORKERS=4

# Maximum retry attempts for failed operations
MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Cleanup Settings
# -----------------------------------------------------------------------------
# Enable automatic cleanup of temporary files (true/false)
ENABLE_CLEANUP=true

# Cleanup files on application startup (true/false)
CLEANUP_ON_STARTUP=true

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
# Allowed origins for CORS (* for all)
CORS_ORIGINS=*

# -----------------------------------------------------------------------------
# Gemini API Keys (Round-Robin)
# Isi dengan API key dari Google AI Studio
# https://aistudio.google.com/app/apikey
# Minimal 1 key diperlukan, maksimal 20 key untuk round-robin
# -----------------------------------------------------------------------------
GEMINI_API_KEY_1=
GEMINI_API_KEY_2=
GEMINI_API_KEY_3=
